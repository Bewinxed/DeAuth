    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "runtimeExecutable": "/home/bewinxed/.bun/bin/bun",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "internalConsole"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://127.0.0.1:5173",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "Both",
            "configurations": [
